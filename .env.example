# VSCode Web IDE - Environment Configuration Template
# Copy this file to .env and configure for your environment

# =============================================================================
# Server Configuration
# =============================================================================

# Port to listen on
IDE_PORT=8080

# Host to bind to (0.0.0.0 for all interfaces)
IDE_HOST=0.0.0.0

# Node environment (development, production)
NODE_ENV=production

# =============================================================================
# Authentication
# =============================================================================

# Plain text password (will be hashed automatically)
# WARNING: Don't commit this to version control!
IDE_PASSWORD=changeme

# Or use a pre-hashed password (Argon2)
# IDE_HASHED_PASSWORD=

# Authentication type (password, none)
AUTH_TYPE=password

# =============================================================================
# Security
# =============================================================================

# Disable telemetry
DISABLE_TELEMETRY=true

# Disable update checks
DISABLE_UPDATE_CHECK=false

# Trusted origins (comma-separated)
# TRUSTED_ORIGINS=https://example.com,https://ide.example.com

# Skip authentication for preflight requests
# SKIP_AUTH_PREFLIGHT=false

# =============================================================================
# TLS/SSL Configuration
# =============================================================================

# Enable HTTPS
# CERT_PATH=/path/to/cert.crt
# CERT_KEY_PATH=/path/to/cert.key

# =============================================================================
# Paths & Directories
# =============================================================================

# User data directory
# USER_DATA_DIR=~/.local/share/code-server

# Extensions directory
# EXTENSIONS_DIR=~/.local/share/code-server/extensions

# Config file path
# CONFIG_PATH=~/.config/code-server/config.yaml

# =============================================================================
# Application Settings
# =============================================================================

# Application name
APP_NAME=VSCode Web IDE

# Welcome text
# WELCOME_TEXT=Welcome to VSCode Web IDE

# Locale (en, es, fr, de, etc.)
LOCALE=en

# =============================================================================
# Docker Configuration
# =============================================================================

# Project directory to mount (when using Docker)
PROJECT_DIR=./workspace

# =============================================================================
# Advanced Settings
# =============================================================================

# Idle timeout in seconds (0 to disable)
# IDLE_TIMEOUT=0

# Proxy domains (comma-separated)
# PROXY_DOMAINS=

# Disable proxy
# DISABLE_PROXY=false

# Custom VS Code proxy URI
# VSCODE_PROXY_URI=

# Extensions gallery URL
# EXTENSIONS_GALLERY=

# =============================================================================
# Logging
# =============================================================================

# Log level (trace, debug, info, warn, error)
LOG_LEVEL=info

# Log format (text, json)
# LOG_FORMAT=text

# =============================================================================
# Performance
# =============================================================================

# Node.js memory limit (in MB)
# NODE_OPTIONS=--max-old-space-size=4096

# Number of worker processes (0 for auto)
# WORKERS=0
